{
  "name": "create-itk-wasm",
  "version": "1.0.0",
  "description": "CLI to create a new ITK-Wasm project or add a pipeline to an existing project.",
  "type": "module",
  "exports": {
    ".": {
      "node": "./dist/generate-project.js",
      "default": "./dist/generate-project.js"
    }
  },
  "bin": {
    "create-itk-wasm": "./dist/create-itk-wasm.js"
  },
  "scripts": {
    "build": "tsc --pretty",
    "build:watch": "tsc --pretty --watch",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "pnpm test:help",
    "test:defaultPipeline": "shx rm -rf test-default-pipeline && node dist/create-itk-wasm.js -n \"test-default-pipeline\" -a \"Test Monkey\" -d \"Sample description\" --pipeline-name test-pipeline --pipeline-description \"A test pipeline description\"",
    "test:help": "node dist/create-itk-wasm.js --help"
  },
  "homepage": "https://wasm.itk.org/",
  "bugs": {
    "url": "https://github.com/InsightSoftwareConsortium/itk-wasm/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/InsightSoftwareConsortium/itk-wasm.git"
  },
  "keywords": [
    "itk",
    "imaging",
    "wasm",
    "webassembly",
    "wasi",
    "io",
    "medical",
    "scientific"
  ],
  "author": "Insight Software Consortium",
  "license": "Apache-2.0",
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.14",
    "node-emoji": "^2.1.3",
    "validate-npm-package-name": "^5.0.0",
    "xstate": "^5.6.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.16",
    "@types/validate-npm-package-name": "^4.0.2",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "prettier": "^3.2.5",
    "prettier-config-standard": "^7.0.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  },
  "prettier": "prettier-config-standard"
}
